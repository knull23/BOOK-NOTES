<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Notes</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Book Notes</h1>
    <a href="/new" class="btn">Add New Book</a>
    <div class="book-list">
      <% books.forEach(book => { %>
        <div class="book-item">
          <% if (book.cover_url) { %>
            <img src="<%= book.cover_url %>" alt="Cover for <%= book.title %>" class="book-cover">
          <% } else { %>
            <img src="/placeholder.png" alt="No cover available" class="book-cover">
          <% } %>
          <div class="book-details">
            <h2><%= book.title %></h2>
            <p><strong>Author:</strong> <%= book.author %></p>
            <p><strong>Notes:</strong> <%= book.notes %></p>
            <p><strong>Rating:</strong> <%= book.rating %>/5</p>
            <p><strong>Read Date:</strong> <%= book.read_date %></p>
            <a href="/edit/<%= book.id %>" class="btn edit-btn">Edit</a>
            <form action="/delete/<%= book.id %>" method="post" class="delete-form">
              <button type="submit" class="btn delete-btn">Delete</button>
            </form>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>





